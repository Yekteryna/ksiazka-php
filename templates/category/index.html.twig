{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h3>Categories</h3>

    <table class="table table-striped">
    <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>
                    <a href="{{ path('app_recipe_index') }}?category_id={{ category.id }}" class="btn btn-warning" role="button" aria-pressed="true">Recipes</a>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-warning" role="button" aria-pressed="true">Show</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning" role="button" aria-pressed="true">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}" class="btn btn-warning">Create new</a>
{% endblock %}
