{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ category.title }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_category_index') }}" class="btn btn-secondary btn-sm active" role="button" aria-pressed="true">Back to list</a>
    <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-warning" role="button" aria-pressed="true">Edit</a>

    <hr class="my-4">

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
